<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <input type="text" name='name' placeholder='Nome do professor' value="{{teacher.name}}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name='birth' value="teacher.birth">
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="instrucao">
      <option value=""></option>
      <option value="Médio Completo">Médio Completo</option>
      <option value="Superior Completo">Superior Completo</option>
      <option value="Mestrado">Mestrado</option>
      <option value="Doutorado">Doutorado</option>

    </select>
  </div>
</div>

<div class="item">
  <div>Modalidade de aula</div>
  <div>
    <span>
      <input type="radio" name='kind' value='P' {% if teacher.kind == 'P'%} checked="checked"{% endif %} >Presencial
    </span>

    <span>
      <input type="radio" name="kind" value='D' {% if teacher.kind == 'D' %} checked="checked"{% endif %} >À Distância
    </span>

  </div>

</div>

<div class="item">
  <div>Área de atuação</div>
  <div><input type="text" name='services' placeholder='Separe as disciplinas por vírgulas' value="{{teacher.services}}"></div>
</div>

<button type="submit">Salvar</button>